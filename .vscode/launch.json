{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Vitepress dev",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/vitepress/bin/vitepress.js",
        "args": ["dev"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Vitepress preview",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/vitepress/bin/vitepress.js",
        "args": ["preview"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }